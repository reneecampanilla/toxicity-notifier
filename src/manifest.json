{
  "name": "Messenger Notifier",
  "description": "A Chrome extension that notifies you for new messages in Facebook.",
  "version": "0.1.0",
  "manifest_version": 2,
  "icons": {
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "browser_action": {
    "default_title": "extension",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  }
}
